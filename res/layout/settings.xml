<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/setting_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:typeface="monospace" />

    <Spinner
        android:id="@+id/questionslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/setting_header"
        android:layout_marginTop="56dp"
        android:prompt="@string/prompt_value" />

    <TextView
        android:id="@+id/quetstion_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/setting_header"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="40dp"
        android:text="Please select a question" />

    <TextView
        android:id="@+id/setting_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/quetstion_label"
        android:layout_centerVertical="true"
        android:text="Set Password" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/setting_password"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/Setting_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/setting_password"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="21dp"
        android:text="Confirm Password" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Setting_confirm"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Save" android:onClick="saveClicked"/>

    <EditText
        android:id="@+id/set_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/questionslist"
        android:ems="10" />

</RelativeLayout>